<div class="user-post-card">
  <h3>Post #<%= post.id %></h3>
  <div>
    <h4><%= post.title %></h4>
    <p><%= post.text %></p>
    <%= link_to "View More", user_post_path(@user, post), class: "view_more_btn"%>
    <div>
      <span>Comments: <%= post.comments_counter %></span>
      <span>Likes: <%= post.likes_counter %></span>
    </div>
  </div>
</div>